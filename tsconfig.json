{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "noUnusedLocals": true,
    "jsx": "react",
    "outDir": "./lib",
    "declaration": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "configFile": "./tslint.json",
        "disableNoUnusedVariableRule": false
      }
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "src/examples/**/*.tsx",
    "src/**/*.test.tsx"
  ]
}